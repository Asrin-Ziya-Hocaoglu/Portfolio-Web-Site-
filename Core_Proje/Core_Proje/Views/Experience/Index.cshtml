@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Experiences Table</h4>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
                </thead>
                <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.ExperienceId</td>
                        <td>@item.Name</td>
                        <td>@item.Date</td>
                        <td>@item.Description</td>
                        <td>@item.Location</td>
                        <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Delete</a></td>
                        <td><a href="/Experience/EditExperience/@item.ExperienceId" class="btn btn-outline-success">Update</a></td>
                    
                    </tr>
                }
            </table>
            <a href="/Experience/AddExperience/" class="btn btn-outline-info">Add New Experience</a>
        </div>
    </div>
</div>
</div>
                      

