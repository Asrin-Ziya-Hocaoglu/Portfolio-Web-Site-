@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Skill</h4>
                <br/>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.SkillId)
                    <div class="form-group">
                        <label>Skill Name</label>
                        <input type="text" class="form-control" name="Title" value="@Model.Title">
                    </div>
                    <div class="form-group">
                        <label >Value</label>
                        <input type="text" class="form-control" name="Value" value="@Model.Value">
                    </div>
                    <button class="btn btn-success">Submit</button>

                </form>
            </div>
        </div>
    </div>
}

