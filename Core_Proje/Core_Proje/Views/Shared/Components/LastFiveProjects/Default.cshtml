@using EntityLayer.Concrete
@model List<Portfolio>
 <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                      <h4 class="card-title mb-1">Last Projects</h4>
                      <p class="text-muted mb-1">Status Of Projects</p>
                    </div>
                    <div class="row">
                      <div class="col-12">
                          <div class="preview-list">
                              @foreach (var item in Model)
                              {
                                  <div class="preview-item border-bottom">
                                      <div class="preview-thumbnail">
                                          <div class="preview-icon bg-primary">
                                              <img src="@item.Platform"/>
                                          </div>
                                      </div>
                                      <div class="preview-item-content d-sm-flex flex-grow">
                                          <div class="flex-grow">
                                              <h6 class="preview-subject">@item.Name</h6>
                                              <p class="text-muted mb-0">@item.Price</p>
                                          </div>
                                          <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                              <p class="text-muted">@item.Status</p>
                                              <p class="text-muted mb-0">@item.Value %</p>
                                          </div>
                                      </div>
                                  </div>
                              }
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>