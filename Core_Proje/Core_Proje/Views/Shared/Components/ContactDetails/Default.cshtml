@using EntityLayer.Concrete
@model List<Contact>

<div class="col-lg-5 d-flex align-items-stretch">
    <div class="info">
        @foreach (var item in Model)
        {
            <div>
                <h3><em>@item.Title</em></h3>
                <p>@item.Description
                </p>
            </div>

            <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>@item.Location</p>
            </div>

            <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>@item.Mail <a href="mailto:@item.Mail">Send Mail!</a></p>
                
            </div>

            <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>@item.PhoneNumber</p>
            </div>
        }

        <iframe src="https://maps.google.com/maps?q=kartal%20Istanbul&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border: 0; width: 100%; height: 290px;" allowfullscreen></iframe>
    </div>

</div>