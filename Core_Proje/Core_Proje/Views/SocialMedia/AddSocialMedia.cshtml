
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Social Media</h4>
            <br />
            <form method="post" asp-controller="SocialMedia" asp-action="AddSocialMedia" class="forms-sample">
                <div class="form-group">
                    <label> Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label >Url</label>
                    <input type="text" class="form-control" name="Url" placeholder="Your Link">
                </div>
                <div class="form-group">
                    <label >Icon</label>
                    <input type="text" class="form-control" name="Icon" placeholder="Icon">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    
            </form>
        </div>
    </div>
</div>



