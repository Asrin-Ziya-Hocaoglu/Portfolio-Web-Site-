@model Core_Proje.Models.UpdateTestimonialModel
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateTestimonial","Test", FormMethod.Post, new{enctype="multipart/form-data"}))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Skill</h4>
                <br/>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.Id, new {@class="form-control"})
                   
                    <div class="form-group">
                        <label>Client Name</label>
                        @Html.TextBoxFor(x=>x.ClientName, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label >Profession</label>
                        @Html.TextBoxFor(x=>x.Profession, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label >Comment</label>
                        @Html.TextBoxFor(x=>x.Comment, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label >Picture Upload</label>
                        <input  type="file" name="Picture" class="form-control"/>
                        @*@Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control"})*@
                    </div>
                    <button  class="btn btn-success">Submit</button>

                </form>
            </div>
        </div>
    </div>
}
