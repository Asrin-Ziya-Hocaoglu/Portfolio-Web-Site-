@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "OutGoingMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Outgoing Message Table</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Receiver Name</th>
                        <th>Subject</th>
                        <th>Date</th>
                        <th>Delete</th>
                        <th>View Details</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach(var item in Model){
                        <tr>
                            <td>@item.WriterMessageId</td>
                            <td>@item.ReceiverName</td>
                            <td>@item.Subject</td>
                            <td>@item.Date</td>
                            <td><a href="/AdminMessage/AdminMessageDelete/@item.WriterMessageId" class="btn btn-outline-danger">Delete</a></td>
                            <td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageId" class="btn btn-outline-success">View Details</a></td>
                    
                        </tr>
                    }
                </table>
                <a href="/AdminMessage/AddAdminMessage/" class="btn btn-outline-primary">Send New Message</a>
            </div>
        </div>
    </div>
</div>

