@using EntityLayer.Concrete
@model List<Resume>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experiences Table</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Mail</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach(var item in Model){
                        <tr>
                            <td>@item.ResumeId</td>
                            <td>@item.Name</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Address</td>
                            <td>@item.Mail</td>
                            <td><a href="/Resume/DeleteResume/@item.ResumeId" class="btn btn-outline-danger">Delete</a></td>
                            <td><a href="/Resume/EditResume/@item.ResumeId" class="btn btn-outline-success">Update</a></td>
                    
                        </tr>
                    }
                </table>
                
            </div>
            <a href="/Resume/AddResume/" class="btn btn-outline-info">Add New Resume</a>
        </div>
        
    </div>
    
</div>


