@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcements</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Kind</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.AnnouncementId</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-YYYY"))</td>
                                <td><label class="badge badge-warning">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.AnnouncementId" class="btn btn-outline-primary">Details</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

