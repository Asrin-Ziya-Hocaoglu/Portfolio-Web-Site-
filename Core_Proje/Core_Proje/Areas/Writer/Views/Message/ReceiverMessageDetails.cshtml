@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<<h1>Outgoing Message Details</h1>

<form class="form-group">
    @Html.HiddenFor(x=>x.WriterMessageId, new {@class ="form-control"})
    
    @Html.Label("Receiver Name")
    @Html.TextBoxFor(x=>x.ReceiverName, new{@disabled="true",@class="form-control"})
    <br/>
    @Html.Label("Receiver Mail")
    @Html.TextBoxFor(x=>x.Receiver,new {@disabled="true",@class="form-control"})
    <br/>
    @Html.Label("Message")
    @Html.TextAreaFor(x=>x.MessageContent,10,3, new {@disabled="true",@class="form-control"})

</form>
