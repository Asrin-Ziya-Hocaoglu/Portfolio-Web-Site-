@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<<h1>Inbox Message Details</h1>

<form class="form-group">
    @Html.HiddenFor(x=>x.WriterMessageId, new {@class ="form-control"})
    
    @Html.Label("Sender Name")
    @Html.TextBoxFor(x=>x.SenderName, new{@disabled="true",@class="form-control"})
    <br/>
    @Html.Label("Sender Mail")
    @Html.TextBoxFor(x=>x.Sender,new {@disabled="true",@class="form-control"})
    <br/>
    @Html.Label("Message")
    @Html.TextAreaFor(x=>x.MessageContent,10,3, new {@disabled="true",@class="form-control"})

</form>

